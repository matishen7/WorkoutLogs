@page "/session/{exerciseTypeId:int}"
<title>Workout Session</title>


<div class="Loading"></div>
@if (ExerciseGroups == null)
{
    <p>Loading Data...</p>
}
else
{
    foreach (var exerciseGroup in ExerciseGroups)
    {
        <div class="accordion-body">
            @exerciseGroup.Id
        </div>
    }
}

@if (string.IsNullOrEmpty(Message) == false)
{
    <div class="alert alert-warning">
        @Message
    </div>
}

<div class="m-2 d-flex justify-content-middle">
    <button @onclick="EndSession" class="btn btn-success">End session</button>
</div>


