@page "/exercises/"

<h3>Exercises</h3>

<div class="m-2 d-flex justify-content-end">
    <button @onclick="CreateExercise" class="btn btn-success">Add Exercise</button>
</div>

@if (string.IsNullOrEmpty(Message) == false)
{
    <div class="alert alert-danger">
        @Message
    </div>
}



<div class="Loading"></div>
@if (Exercises == null)
{
    <p>Loading Data...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    TutorialUrl
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exercise in Exercises)
            {
                <tr>
                    <td>@exercise.Id </td>
                    <td>@exercise.Name </td>
                    <td><a href="@exercise.TutorialUrl">@exercise.TutorialUrl</a></td>
